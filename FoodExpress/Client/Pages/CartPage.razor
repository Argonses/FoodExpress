@page "/cartPage"
@inject HttpClient http

<link href="/css/CartStyles.css" rel="stylesheet" />

<h3>CartPage</h3>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price ($)</th>
            <th>Added On</th>
            <th>Updated On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Orders)
        {
            <tr>
                <td>
                    <div class="order-image-container">
                        <img src="@order.ImageUrl" alt="Order Image" class="order-image" />
                    </div>
                </td>
                <td>@order.Name</td>
                <td>@order.Description</td>
                <td>$@order.Price</td>
                <td>@order.AddedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@order.UpdatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <button class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<Order> Orders = new List<Order>();

    protected override async Task OnInitializedAsync()
    {
        var result = await http.GetFromJsonAsync<List<Order>>("api/Cart");
        if (result != null)
        {
            Orders = result;
        }
    }
}

